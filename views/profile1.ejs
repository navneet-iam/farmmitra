<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="css/bootstrap.min.css" rel="stylesheet">
    <script src="javascript/jquery-1.8.2.min.js"></script>
    <script src="javascript/bootstrap.min.js"></script>
    <link href="fontawesome-free-5.15.3-web/css/all.css" rel="stylesheet">
    <style>
        body {
            background-color: rgb(49, 10, 10);
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #BA68C8
        }

        .profile-button {
            background-color: rgb(49, 10, 10);
            box-shadow: none;
            border: none
        }

        .profile-button:hover {
            background: #682773
        }

        .profile-button:focus {
            background: #682773;
            box-shadow: none
        }

        .profile-button:active {
            background: #682773;
            box-shadow: none
        }

        .back:hover {
            color: #682773;
            cursor: pointer
        }
    </style>

    <script>
        function doit() {

            var dd = document.getElementById('eid');
            dd.value = localStorage.getItem("farmid");
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showLocation);

            }




        }
        function showLocation(position) {
            var ss = document.getElementById('lati');
            var ss1 = document.getElementById('longi');
            ss.value = position.coords.latitude;
            ss1.value = position.coords.longitude;
        }

    </script>
</head>

<body onload="doit()">
    <div class="container rounded bg-white mt-5">
        <div class="row">
            <div class="col-md-12">
                <h1>Farmer Login </h1>
            </div>
            <div class="col-md-12">
                <div class="p-3 py-5">
                    <form method="post" action="/farmp-save">
                        <div class="row mt-2">
                            <div class="col-md-6"><input type="text" class="form-control" placeholder="first name"
                                    name="naam">
                            </div>
                            <div class="col-md-6"><input type="text" class="form-control" id="eid" placeholder="id"
                                    name="id" value=<%=f1%> >
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6"><input type="text" class="form-control" placeholder="Email"
                                    name="email"></div>
                            <div class="col-md-6"><input type="text" class="form-control" placeholder="Phone number"
                                    name="phone">
                            </div>
                        </div>
                        <div class="row mt-3">

                            <div class="col-md-12"><input type="text" class="form-control" placeholder="upi" name="upi">
                            </div>
                        </div>
                        <div class="row mt-3">

                            <div class="col-md-3"><input type="text" class="form-control" name="lati" id="lati">
                            </div>
                            <div class="col-md-3"><input type="text" class="form-control" name="longi" id="longi">
                            </div>
                        </div>
                        <div class="mt-5 text-right"><button class="btn btn-primary profile-button" type="submit">Save
                                Profile</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>