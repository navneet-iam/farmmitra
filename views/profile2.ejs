    <style>
        body {
            background-color: rgb(49, 10, 10);
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #BA68C8
        }

        .profile-button {
            background-color: rgb(49, 10, 10);
            box-shadow: none;
            border: none
        }

        .profile-button:hover {
            background: #682773
        }

        .profile-button:focus {
            background: #682773;
            box-shadow: none
        }

        .profile-button:active {
            background: #682773;
            box-shadow: none
        }

        .back:hover {
            color: #682773;
            cursor: pointer
        }
    </style>

    <script>
        function doit(ref) {
            var re = document.getElementById("vid");
            re.value = localStorage.getItem("vendorid");

            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showLocation);

            }




        }
        function showLocation(position) {
            var ss = document.getElementById('lati');
            var ss1 = document.getElementById('longi');
            ss.value = position.coords.latitude;
            ss1.value = position.coords.longitude;
        }

    </script>
</head>

<body onload="doit()">
    <div class="container-fluid" style="background-color: rgb(49, 10, 10);position: relative;">

        <div style=" width: 100%;color: white;" class="row">

            <div class="col-md-4 pad fle-row">
